page {
  height: 100%;
  overflow: hidden;
  font-size: 33rpx;
}

.top {
  width: 95%;
  margin: auto;
}

.sousuo {
  padding-left: 30rpx;
  font-size: 24rpx;
  background-color: #e5e5e5;
}

.search {
  width: 710rpx;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #e5e5e5;
  border-radius: 50rpx;
}

.place {
  font-size: 30rpx;
  color: #c4c4c4;
}

.scroll {
  white-space: nowrap;
  height: 100%;
  width: 100%;
}

.scrolls {
  height: 100%;
  width: 100%;
}

.conceal {
  margin-top: 20rpx;
  width: calc(100vw - 20px);
  height: 70rpx;
  overflow: hidden;
}

.conceals {
  margin-top: 20rpx;
  width: calc(100vw - 20px);
  word-wrap: break-word;
}

.navig_title {
  margin-left: 10rpx;
  margin-right: 30rpx;
  display: inline-block;
  height: 100%;
  padding-top: 20rpx;
}

.flex {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.img {
  width: 40rpx;
  height: 40rpx;
  position: relative;
  top: 10rpx;
  font-size: 40rpx;
}

.com_make_phone {
  position: absolute;
  display: flex;
  top: -100rpx;
  width: 100%;
  height: 110%;
  z-index: 10 !important;
}
