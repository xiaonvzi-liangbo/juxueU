  <view class="head">
    <view class="head_tx">
      <view class="head_tx_tp">
        <image src="{{userdata.logo}}" style="width:120rpx;height:120rpx;  border-radius: 50%;"></image>
      </view>
      <view class="head_nc">
        <view class="head_name">{{userdata.nickName}}</view>
        <image src="{{userdata.associationImg}}" class="mass"></image>
