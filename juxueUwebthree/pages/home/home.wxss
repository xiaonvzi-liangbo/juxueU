/* pages/index/index.wxss */

page {
  background-color: #fff;
  overflow: hidden;
}
 
.martop {
  background-color: #fff;
}
.dian{
  border: 2px #a8a8a8 solid;
  border-radius: 50%;
  margin-right: 10rpx;
}
.login {
  width: 100%;
  border-radius: 50rpx;
  margin-top: 150rpx;
  height: 330rpx;
  font-size: 24rpx;
  line-height: 40rpx;
  position: absolute;
  background:none;

  border: none !important;
  color: #fff;
  top: 200rpx;
}
.login::after{
   border: none 
}
.slideshow {
  text-align: center;
}

.image {
  border-radius: 15rpx;
  height: 100%;
  width: 95%;
}
.topics1 {
  margin: 20rpx 0;
  border-radius: 20rpx;
  height: 40rpx;
  padding: 0 10rpx;
  line-height: 40rpx;
  background: none;
  color: #2f6eef;

  font-size: 22rpx;
  border: 1rpx #2f6eef solid;
}
.nav_slideshow {
  background-color: #fff;
  margin: 0 auto;
  margin-top: 40rpx;
  width: 95%;
}

.navigation {
  display: flex;
  flex-direction: row;
  align-items: center;
  text-align: center;
  padding-bottom: 30rpx;
  font-size: 25rpx;
}

.details {
  width: 200rpx;
  flex: 1 1 auto;
  font-size: 33rpx;
}

.marbotton {
  margin-top: 15rpx;
  background-color: #fff;
  padding: 20rpx;
}

.view_top {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.more{
  font-size: 22rpx;
  line-height:82rpx; 
}
.view_img {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.view_title {
  margin-left: 10rpx;
  font-weight: bold;
  font-size:40rpx
}
 
.hot_cont {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 30rpx;
  margin-bottom: 20rpx;
}

.hot_portrait {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-left: 10rpx;
}

.hot_title {
  font-weight: 550;
  color: #000;
  position: relative;
  top: -5rpx;
  font-size: 26rpx;
}

.hot_images {
  /* height: 200rpx; */
  width: 100%;
  border-radius: 10rpx;
}
.images_box{
  width: 100%;
  height: 400rpx;
  overflow: hidden;
  }
.hot_icon {
  border-radius: 15rpx;
  margin-left: 10rpx;
  width: 25rpx;
  height: 25rpx;
}

.hot_fontsize {
  margin-left: 5rpx;
  margin-right: 14rpx;
  color: #a8a8a8;
}

.hot_down {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.hot_down_row {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 25rpx;
  color: #ACACAC
}

.mass {
  width: 30rpx;
  height: 30rpx;
  position: relative;
  top: 5rpx;
  right: 20rpx;
}

.sq {
  position: fixed;
  background-color: #fff;
  height: 100%;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0rpx;
  z-index: 99999;
}

.tubiao {
  width: 322rpx;
  height: 322rpx;
}

.site {
  text-align: center;
  padding-top: 300rpx;
}

.title {
  font-size: 30rpx;
  text-align: center;
}
