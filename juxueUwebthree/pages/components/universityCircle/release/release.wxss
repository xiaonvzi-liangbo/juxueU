.mass{
  width: 30rpx;
  height: 30rpx;
  position: relative;
  top: 5rpx;
  right: 10rpx;
}
.images {
  display: flex;
  width: 100%;
  justify-content: space-around;
  margin-bottom: 10rpx;
}

.img_size {
  width: 230rpx;
  height: 150rpx;
  border-radius: 15rpx;
}