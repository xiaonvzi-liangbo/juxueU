.page {
  height: 100%;
}

.card {
  width: 95%;
  margin: auto;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-radius: 0 12rpx 12rpx 0;
  box-shadow: 0 0 10rpx #e4e4e4;
  margin-bottom: 20rpx;
}

.conter {
  width: 60%;
  text-align: left;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.con_left {
  padding: 5rpx 2rpx 10rpx 0rpx;
}

.con_title {
  font-size: 36rpx;
  font-weight: 550;
}

.con_time {
  font-size: 28rpx;
  color: #252525;
  margin: 30rpx 0;
}

.con_num {
  font-size: 25rpx;
  color: #a7a7a7;
}

.com_make {
  display: flex;
  flex-direction: column-reverse;
  position: absolute;
  right: 35rpx;
  margin-top: 135rpx;
}

.com_but {
  border-radius: 0 0 12rpx 0;
  background-color: #2896cc;
  color: #fff;
  font-size: 28rpx;
}

.com_make_phone {
  position: absolute;
  display: flex;
  right: 35;
  top: 0rpx;
  width: 170rpx;
  height: 80rpx;
  z-index: 10 !important;
}

.swip {
  width: 100%;
  margin-top: 25rpx;
  margin-right: 4rpx;
  margin-left: 4rpx;
  height: 100%;
}
