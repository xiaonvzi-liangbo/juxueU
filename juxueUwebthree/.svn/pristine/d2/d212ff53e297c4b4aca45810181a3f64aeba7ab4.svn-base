const requestUrl = require('../../../../utils/request.js')
const number = require('../../../../utils/quantity.js')
const time = require('../../../../utils/time.js')

Component({
  properties: {
    visible: {
      type: Boolean,
      value: false,
      observer(visible) {
        if (visible && !this.beginDraw) {
          // this.draw()
          this.beginDraw = true
        }
      }
    },
  },
  data: {
    beginDraw: false,
    isDraw: false,
    twoDimension: '',
    mine: [],
    phone:''

  },

  methods: {
    handleClose() {
      this.triggerEvent('close')
    },
    // 保存
    handleSave() {
      let that = this
      var imgSrc = that.data.twoDimension; //base64编码
      var save = wx.getFileSystemManager();
      var number = Math.random();
      save.writeFile({
        filePath: wx.env.USER_DATA_PATH + '/pic' + number + '.png',
        data: imgSrc,
        encoding: 'base64',
        success: res => {
          wx.saveImageToPhotosAlbum({
            filePath: wx.env.USER_DATA_PATH + '/pic' + number + '.png',
            success: function(res) {
              wx.showToast({
                title: '保存成功',
              })
            },
            fail: function(err) {
              console.log(err)
            }
          })
          console.log(res)
        },
        fail: err => {
          console.log(err)
        }
      })
    },
    //获取我的信息
    getMy() {
      let that = this;
      let userid = wx.getStorageSync('userid')
      wx.request({
        url: requestUrl.requestUrl + '/jXUserApp/findByMy',
        method: 'get',
        data: {
          id: userid
        },
        header: {
          'content-type': 'application/json',
          'content-type': 'application/x-www-form-urlencoded'
        },
        success(res) {
          if (res.data.code == '200') {
            that.setData({
              mine: res.data.data,
              phone: res.data.data.phone
            })
            console.log(res.data.data.phone)
            wx.request({
              url: requestUrl.requestUrl + '/qRCode/image',
              method: 'get',
              data: {
                phone: res.data.data.phone
              },
              header: {
                'content-type': 'application/json',
                'content-type': 'application/x-www-form-urlencoded'
              },
              responseType: 'arraybuffer', //将原本按文本解析修改为arraybuffer
              success(res) {
                console.log(that.data.mine.phone + "：手机号2")
                that.setData({
                  twoDimension: wx.arrayBufferToBase64(res.data)
                })
              }
            })
          }
        }
      })
    }
  }
})