<scroll-view scroll-y class="all">
  <view class="title">
    <input placeholder="请输入问题并以问号结尾" placeholder-style="color:#D6D6D6" value="{{title}}" bindinput="headline"></input>
  </view>
  <textarea maxlength="-1" placeholder="请对问题进行补充说明，可以更快获得解答（选填）" show-confirm-bar="{{false}}" class="textarea" placeholder-style="color:#D1D1D1" value="{{context}}" bindinput="content"></textarea>
  <view class="upload">
    <view wx:if="{{files.length!=0}}" class="upload" wx:for="{{files}}" wx:key="index">
      <image src="{{item}}" class="images"></image>
      <view class="delect" bindtap="imageDeletion" data-index="{{index}}" ><image src="/pages/images/ImageDeletion.png" class="del"></image></view>
    </view>
    <image src="../../images/uploading.png" class="images" bindtap="accessToken" data-fun="uploading" wx:if="{{files.length!=9}}"></image>
  </view>
  <view class="button">
    <view class="but_fbwt" bindtap="accessToken" data-fun="issue">发布 </view>
  </view>
</scroll-view>

