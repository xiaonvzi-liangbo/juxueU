/* pages/universityCircle/information/information.wxss */
.all{
  width: 95%;
  margin: auto;
  font-size: 30rpx;
}
.title{
  font-size: 36rpx;
  font-weight: 550;
}
.top{
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  align-items: center;
}
.row{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.img_tx{
  width:60rpx;
  height:60rpx;
  border-radius: 50%;
  margin: 20rpx 0;
  border: 1rpx solid gainsboro;
}
.attention{
  font-size: 25rpx;
  background-color: #2896CC;
  color: #fff;
  padding: 8rpx 30rpx;
  border-radius: 50rpx;
}
.text{
  line-height: 50rpx;
  font-size: 28rpx;
  color: #595959;
  margin-left: 15rpx;
}
.kindimg{
  width: 100%;
  height: 300rpx;
  margin-top: 10rpx;
  border-radius: 10rpx;
}
.issue_time{
  font-size: 25rpx;
  color: #A2A2A2;
  margin-left: 10rpx;
}
.comment{
  margin-top: 30rpx;
  font-size: 33rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.comment_block{
  height: 37rpx;
  width: 10rpx;
  background-color: #2896CC;
}
.com_comment{
  margin-left: 40rpx;
  margin-right: 10rpx;
}
.com_img_name{
  margin-top: 20rpx;
  margin-left: 5rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.com_img{
  width:50rpx;
  height:50rpx;
  border-radius: 50%;
  border: 1rpx solid gainsboro;
  margin-right: 15rpx;
}
.com_name{
  margin-left: 5rpx;
  font-size: 30rpx;
}
.com_conter{
  font-size: 33rpx;
  margin-top: 10rpx;
  color: #595959;
  margin-left: 70rpx;
  line-height: 40rpx;
  border-bottom: 1rpx solid #F6F6F6;
  /* border-bottom: 1rpx solid red; */
}
.com_text{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  overflow: hidden;
}
.com_row{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.com_bet{
  margin-top: 15rpx;
  margin-bottom: 15rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 25rpx;
  color: #B3B3B3;
}
.text_line{
  margin: 0 20rpx 0 10rpx;
}
.bottom{
  height: 100rpx;
  position: fixed;
  bottom: 0;
  border-top: 1rpx solid #DDDDDD;
  background-color: #fff;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  color: #BDBDBD;
  font-size: 30rpx;
}
.bot_input{
  width: 100%;
  background-color: #EEEEEE;
  margin-left: 20rpx;
  margin-right: 20rpx;
  padding: 12rpx 15rpx 12rpx 15rpx;
  border-radius: 10rpx;
}
.bot_right{
  margin-left: 90rpx;
  display: flex;
  flex-direction: row;
  width: 100%;
}
.flex_auto{
  flex: auto;
}
.number{
  font-size: 23rpx;
  width: 40rpx;
  text-align: center;
}
.reply{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100%;
}
.rep_posi{
  height: 100%;
  width: 95%;
  font-size: 33rpx;
  margin: auto;
}
.row{
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}
.rep_reply{
  margin: auto;
  font-size: 36rpx;
  font-weight: 550;
  color: #595959;
}
.rep_conter{
  overflow: auto;
  margin-top: 20rpx;
}
.rep_botom{
  position: fixed;
  bottom: 0;
  height: 100rpx;
  font-size: 25rpx;
  border-top: 1rpx solid #D8D8D8;
  background-color: #fff;
  width: 100%;
}
.rep_input{
  background-color: #EBEBEB;
  width: 89%;
  margin: auto;
  padding: 12rpx 20rpx;
  border-radius: 10rpx;
  position: relative;
  top: 20rpx;
}
.bot_text{
  position: relative;
  right: 6rpx;
}
.attention1{
  font-size: 25rpx;
  color: #BFBFBF;
}
.userlogo{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}
.img_icon{
  width: 20rpx;
  height: 20rpx;
  position: relative;
  top: 20rpx;
  right: 20rpx;
}
.small{
  color: #808080;
  font-size: 22rpx;
  margin-top: 5rpx;
}
.sma_title{
  font-size: 26rpx;
  font-weight: 900;
}
.pos_title{
  font-size: 34rpx;
  font-weight: 900;
  margin-bottom: 20rpx;
}
.flex_auto1{
  /* background-color: #FFFFFF; */
  padding: 0;
  margin: 0;
  width: 40rpx;
  border: 0;
  color: #BDBDBD;
  line-height: 35rpx;
  position: static;
  margin-right: 30rpx;
  background-color: red;
}
.button{
  position: absolute;
  height: 100%;
  opacity: 0.1;
  width: 60rpx;
  z-index: 99;
  top: 0;
}