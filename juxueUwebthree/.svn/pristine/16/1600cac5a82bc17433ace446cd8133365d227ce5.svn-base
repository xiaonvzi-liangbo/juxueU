.dyna_card {
  margin-left: 20rpx;
  display: flex;
  flex-direction: row;
  /* align-items: center; */
  margin-top: 20rpx;
}

.card_img {
  width: 160rpx;
  height: 190rpx;
  border-radius: 10rpx;
}

.card_conter {
  padding: 10rpx 20rpx;
}

.card_text {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  font-size: 30rpx;
  text-align: 25rpx;
  height: 120rpx;
  letter-spacing: 2rpx;
}

.card_bom {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 22rpx;
  color: #808080ff;
  margin-top: 20rpx;
}

.card_imgs {
  width: 20rpx;
  height: 18rpx;
  margin-right: 5rpx;
}

.comment {
  margin-left: 40rpx;
}

.card_time {
  position: absolute;
  right: 60rpx;
}

.textarea {
  width: 100%;
  max-height: 246rpx;
}

.save {
  display: flex;
  flex-direction: row;
  align-items: center;
  position: absolute;
  right: 20rpx;
  bottom: 15rpx;
  font-size: 20rpx;
  color: #8ddfa5;
}

.form {
  text-align: center;
  padding: 20rpx;
}

.form_in {
  border: 1rpx solid #030000;
  width: 80%;
  margin: auto;
  margin-bottom: 20rpx;
  text-align: left;
  padding: 5rpx 20rpx;
  font-size: 24rpx;
}

.model_save {
  /* padding: 15rpx 30rpx; */
  background-color: #2996cc;
  width: 136rpx;
