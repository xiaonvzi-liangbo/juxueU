.video{
  width: 100%;
  /* height: 350rpx; */
  margin-top: 20rpx;
}
.subject{
  width: 95%;
  margin: auto;
  margin-top: 30rpx;
  font-size: 33rpx;
}
.title{
  font-size: 36rpx;
  font-weight: 550;
  line-height: 50rpx;
}
.assistantTitlt{
  font-size: 28rpx;
  color: #A0A0A0;
  line-height: 50rpx;
  margin-left: 4rpx;
}
.middle{
  margin-top: 40rpx;
  box-shadow: 0 0 10rpx #B7B7B7;
  border-radius: 100rpx;
  display: flex;
  flex-direction: row;
  padding: 25rpx 35rpx;
}
.teacher{
  font-size: 33rpx;
  font-weight: 550;
}
.introduce{
  margin-top: 10rpx;
  font-size: 30rpx;
  line-height: 40rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:3;
  overflow: hidden;
}
.distance{
  width: 95%;
  margin: auto;
  margin-top: 50rpx;
}
.summarize{
  text-align: center;
  font-size: 36rpx;
  color: #2996CC;
  font-weight: 550;
}
.shadow{
  height: 25rpx;
  background-color: #C1CBD7;
  width: 200rpx;
  margin: auto;
  border-radius: 50rpx;
  position: relative;
  top: -17rpx;
  z-index: -11;
}
.black{
  background-color: #404A55;
  position: relative;
  top: 15rpx;
  width: 80%;
  margin: auto;
  padding: 40rpx 30rpx 70rpx 30rpx;
  color: #fff;
  font-size: 30rpx;
  line-height: 45rpx;
}
.understand{
  background: #287ACC;
  color: #fff;
  width: 500rpx;
  margin: auto;
  text-align: center;
  margin-bottom: 50rpx;
  border-radius: 50rpx;
  position: relative;
  top: -30rpx;
  box-shadow: 0 0 4rpx #C6C6C6;
}