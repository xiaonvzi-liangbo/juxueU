/* pages/my/fans/fans.wxss */

.card {
  width: 95%;
  margin: auto;
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
  position: relative;
}

.logo {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.name {
  font-size: 22rpx;
}

.time {
  font-size: 18rpx;
  color: #999;
  display: flex;
  flex-direction: row;
}

.middle {
  font-size: 28rpx;
  margin: 10rpx 0;
}

.end {
  padding: 10rpx;
  position: absolute;
  right: 30rpx;
  top: 0;
  width: 106rpx;
  height: 106rpx;
  line-height: 28rpx;
  background-color: #e6e6e6;
  font-size: 18rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  overflow: hidden;
}

.like {
  width: 34rpx;
  height: 34rpx;
}

.attention {
  position: absolute;
  right: 20rpx;
  top: 30rpx;
  font-size: 24rpx;
  width: 100rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  background-image: linear-gradient(to bottom right, #7590f2, #2b6cef);
  border-radius: 24rpx;
  color: #fff;
}

.atten {
  width: 124rpx;
  height: 48rpx;
  line-height: 48rpx;
  position: absolute;
  right: 20rpx;
  top: 30rpx;
  text-align: center;
  font-size: 24rpx; 
  color: #999;
  background-color: #e5e5e5;
  border-radius: 24rpx;
}

.img_icon {
  width: 40rpx;
  height: 40rpx;
  position: relative;
  top: 70rpx;
  right: 35rpx;
}

.attention1 {
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  font-size: 24rpx;
  background-color: #e6e6e6;
  color: #fff;
  border-radius: 10rpx;
  padding: 15rpx 37rpx;
}
