}
.bot_but{
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  flex-direction: row;
  margin: auto;
  background-color: #fff;
  padding: 20rpx 0;
  border-top: 1rpx solid #D0D0D0;
  height: 80rpx;
}
