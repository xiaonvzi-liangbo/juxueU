}
.bannerimg{
  width: 100%;
  height: 300rpx;
}
.text{
  display: block;
  margin: auto;
  width: 88%;
  color: #1B1B1B;
  font-size: 33rpx;
  padding-top: 10rpx;
  padding-bottom: 20rpx;
  line-height: 45rpx;
}
.content{
  width: 95%;
  background-color: #fff;
  margin: auto;
  margin-top: 20rpx;
  border-radius: 10rpx;
}
.title{
  font-size: 36rpx;
  font-weight: 550;
  border-bottom: 1rpx solid #DCDCDC;
  line-height: 80rpx;
  padding-left: 30rpx;
  color: #1B1B1B;
}
.con_text{
  line-height: 45rpx;
  font-size: 30rpx;
