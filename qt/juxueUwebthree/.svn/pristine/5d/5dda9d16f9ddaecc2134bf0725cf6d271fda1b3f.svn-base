/* pages/hotspot/myCommunity/myCommunity.wxss */
.heard_img{
 width: 100%;
 height: 300rpx;
}
.heards{
  width: 90%;
  margin: auto;
  display: flex;
  flex-direction: row;
  position: relative;
  top: -100rpx;
}
.heard_tx{
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border:4rpx solid #EDF0F4;
}
.heards_title{
  color: #fff;
  font-size: 34rpx;
  margin-left: 26rpx;
  font-weight: 600;
  position: relative;
  top: 45rpx;
  
}
.heards_bom{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 20rpx;
  margin-left: 26rpx;
  position: relative;
  top: 60rpx;
}
.bom_img{
  width: 22rpx;
  height: 22rpx;
  margin-right: 10rpx;
}
.auto{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.navi{
  width: 95%;
  margin: auto;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.navi_view{
  flex: auto;
  font-size: 24rpx;
  text-align: center;
  position: relative;
  top: -60rpx;
}
.hd{
  width: 18rpx;
  height: 18rpx;
  background-color: red;
  border-radius: 50%;
  position: absolute;
  right: 32%;
}
.navi_img{
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}
.dynamic{
  width: 95%;
  margin: auto;
}
.dyna{
  font-size: 36rpx;
  font-weight: 600;
}
.dyna_card{
  margin-left: 20rpx;
  display: flex;
  flex-direction: row;
  /* align-items: center; */
  margin-top: 20rpx;
}
.card_img{
  width: 160rpx;
  height: 190rpx;
  border-radius: 10rpx;
}
.card_conter{
  padding: 10rpx 20rpx;
}
.card_text{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  font-size: 30rpx;
  text-align: 25rpx;
  height: 120rpx;
  letter-spacing:2rpx;
}
.card_bom{
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 22rpx;
  color: #808080FF;
  margin-top: 20rpx;
}
.card_imgs{
  width: 20rpx;
  height: 18rpx;
  margin-right: 5rpx;
}
.comment{
  margin-left: 40rpx;
}
.card_time{
  position: absolute;
  right: 60rpx;
}
.fabu{
  width: 150rpx;
  height: 150rpx;
}
.but{
  position: fixed;
  bottom: 100rpx;
  right: 60rpx;
}
.modal_title{
  font-size: 30rpx;
  text-align: center;
  margin-bottom: 20rpx;
}
.modal_conter{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 30rpx;
}
.modal_img{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}
.modal_name{
  text-align: left;
  margin-left: 10rpx;
  font-size: 26rpx;
  width: 380rpx;
  position: relative;
  top: -5rpx;
}
.modal_but{
  font-size: 18rpx;
  padding: 10rpx 20rpx;
  margin-left: 5rpx;
  border-radius: 10rpx;
  background-color: red;
  color: #fff;
}