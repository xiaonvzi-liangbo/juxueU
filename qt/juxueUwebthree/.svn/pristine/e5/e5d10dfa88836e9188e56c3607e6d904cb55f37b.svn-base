.card {
  width: 95%;
  margin: auto;
  margin-top: 40rpx;
  display: flex;
  flex-direction: row;
  position: relative;
}
.logo {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.name {
  font-size: 22rpx;
}

.time {
  font-size: 22rpx;
  color: #808080;
  display: flex;
  flex-direction: row;
}
.conright{
  width:80%;
  margin: 10rpx 0;
}
.middle {
  width:75%;
  font-size: 34rpx;
  margin: 10rpx 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.end {
  padding: 10rpx;
  position: absolute;
  right: 30rpx;
  top: 0;
  width: 106rpx;
  height: 106rpx;
  line-height: 28rpx;
  background-color: #e6e6e6;
  font-size: 18rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  overflow: hidden;
}

.like {
  width: 34rpx;
  height: 34rpx;
}

.attention {
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  font-size: 24rpx; 
  color: #fff;
  border-radius: 24rpx;
   width: 100rpx;
   height: 48rpx;
   line-height: 48rpx;
   text-align: center;
   background-image: linear-gradient(to bottom right,#7590F2,#2B6CEF)
}

.img_icon {
  width: 40rpx;
  height: 40rpx;
  position: relative;
  top: 70rpx;
  right: 35rpx;
}

.attention1 {
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  font-size: 24rpx;
  background-color: #e6e6e6;
  color: #000;
  border-radius: 24rpx;
   width: 120rpx;
   height: 48rpx;
   line-height: 48rpx;
   text-align: center;
}
