.entire {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.logo{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.cont_con {
  width: 90%;
  font-size: 30rpx;
  font-weight: 550;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.hd{
  width: 18rpx;
  height: 18rpx;
  background-color: red;
  border-radius: 50%;
  position: absolute;
  right: 32%;
}
.cont_time {
  font-size: 25rpx;
  color: #a1a1a1;
  margin-top: 10rpx;
}

.red_dot {
  width: 20rpx;
  height: 20rpx;
  background-color: red;
  border-radius: 50%;
  position: absolute;
  top: 24rpx;
  left: 120rpx;
}
.img_icon{
  width: 30rpx;
  height: 30rpx;
  position: relative;
  right: 30rpx;
}
