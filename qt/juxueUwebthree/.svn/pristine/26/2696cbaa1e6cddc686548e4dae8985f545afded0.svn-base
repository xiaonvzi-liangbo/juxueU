page{
  overflow: hidden;
}
.hotspot{
  size: 30rpx;
  width: 95%;
  margin: auto;
  height: 100%;
}
.search{
  width: 40rpx;
  height: 40rpx;
}
.search_top{
  display: flex;
  width: 100%;
  flex-direction: row;
  background-color: #E6E6E6;
  padding: 10rpx 30rpx;
  border-radius: 50rpx;
  justify-content: space-between;
}
.title{
  font-size: 30rpx;
  margin:50rpx 0 20rpx 10rpx;
  font-weight: 600;
}
.hot_hot{
  width: 98%;
  margin: auto;
  margin-top: 30rpx;
}
.card{
  display: flex;
  flex-direction: row;
  align-items: center;
  box-shadow: 0 0 10rpx #A3A3A3;
  border-radius: 10rpx;
  padding: 20rpx 30rpx;
}
.card1{
  display: flex;
  flex-direction: column;
  box-shadow: 0 0 10rpx #A3A3A3;
  border-radius: 10rpx;
  padding: 20rpx 30rpx;
}
.card_top{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.button{
  text-align: center;
  /* height: 46rpx; */
  width:125rpx;
  background-color: #DA2929;
  font-size: 25rpx;
  line-height: 55rpx;
  color: #fff;
  border-radius: 10rpx;
}
.hot_center{
  width: 60%;
  margin: 0 20rpx; 
  font-size: 30rpx;
}
.button_co{
  background-color: #2996CC;
}
.hot_img{
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  border: 1rpx solid #2996CC;
}
.hot_botm{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 15rpx;
}
.hot_con{
  flex: auto;
}
.hot_con_img{
  width: 22rpx;
  height: 22rpx;
}
.hot_num{
  font-size: 20rpx;
  color: #999999;
  margin-left: 10rpx;
}
.hot_num1{
  font-size: 20rpx;
  color: #999999;
  margin-left: 10rpx;
  position: relative;
  top: -2rpx;
}
.hot_dynamic{
  background-color: #E6E6E6;
  padding: 10rpx 20rpx;
  margin-top: 20rpx;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
}
.dyn_title{
  font-size: 22rpx;
  color: #000000;
}
.dyn_conter{
  font-size: 22rpx;
  color: #000000;
  margin-top: 10rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:1;
  overflow: hidden;       
}
.border{
  width: 60%;
  height: 70rpx;
  margin: auto;
  border: 1rpx solid #9F9E7E !important;
  margin-bottom: 20rpx;
  text-align: left;
  padding: 0 30rpx;
}
.border1{
  width: 60%;
  margin: auto;
  border: 1rpx solid #9F9E7E !important;
  margin-bottom: 20rpx;
  text-align: left;
  padding: 20rpx 30rpx;
  z-index: -10;
}
.close{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 30rpx;
  top: 30rpx;
}
.modal_but{
  margin-top: 70rpx;
  width: 300rpx;
  background-color: #2996CC;
  color: #fff;
}
.heards{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.cleans{
  width: 100rpx;
  margin-left: 20rpx;
  color: #2996CC;
}
.pick{
  position: relative;
  top: 15rpx;
}