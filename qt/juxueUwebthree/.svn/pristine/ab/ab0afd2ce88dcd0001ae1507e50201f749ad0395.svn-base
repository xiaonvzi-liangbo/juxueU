/* pages/my/my.wxss */

.headback {
  /* background:linear-gradient(to bottom,#2996CC,#fff); */
  background-color: #2996cc;
  text-align: center;
  color: #fff;
}

.headimg {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  background-color: #fff;
  margin-top: 60rpx;
}

.headname {
  font-weight: 550;
  color: #fff;
  /* margin-top: 10rpx; */
}

.lin_hei {
  color: #fff;
  line-height: 80rpx;
}

.education {
  width: 85%;
  margin: auto;
  display: flex;
}

.edu_conter {
  color: #fff;
  flex: auto;
}

.operation {
  width: 50%;
  margin: auto;
  display: flex;
  flex-direction: row;
}

.private {
  width: 20rpx;
  flex: auto;
  border: 4rpx solid #fff;
  padding: 8rpx 0rpx;
  border-radius: 15rpx;
  margin-top: 60rpx;
  font-size: 25rpx;
}

.back_corlor {
  width: 20rpx;
  flex: auto;
  padding: 8rpx 0rpx;
  border-radius: 15rpx;
  margin-top: 60rpx;
  font-size: 25rpx;
  color: #54a8d4;
  background-color: #fff;
}

.bottom {
  padding-top: 50rpx;
  padding-bottom: 30rpx;
  width: 85%;
  margin: auto;
  display: flex;
}

.size {
  margin-bottom: 5rpx;
  font-size: 33rpx;
}

.sizename {
  font-size: 30rpx;
}

.marbotton {
  margin-top: 20rpx;
  background-color: #fff;
  padding: 20rpx;
}

.view_top {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.view_img {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.view_title {
  margin-left: 10rpx;
  font-weight: 550;
}

.hot_cont {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 30rpx;
  margin-bottom: 20rpx;
}

.hot_portrait {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  /* background-color: red; */
  margin-left: 10rpx;
}

.hot_title {
  font-weight: 550;
  color: #5d5d5d;
  margin-left: 10rpx;
}

.hot_images {
  height: 200rpx;
  width: 100%;
  border-radius: 10rpx;
}

.hot_icon {
  border-radius: 15rpx;
  margin-left: 10rpx;
  width: 20rpx;
  height: 20rpx;
}

.hot_fontsize {
  margin-left: 5rpx;
  margin-right: 7rpx;
  color: #a8a8a8;
}

.hot_down {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.hot_down_row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

