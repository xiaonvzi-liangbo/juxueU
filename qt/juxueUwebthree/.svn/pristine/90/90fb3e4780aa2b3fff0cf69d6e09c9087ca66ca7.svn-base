        title: '专属推广码'
      },
      {
        id: '1',
        icon: '../images/v.png',
        title: '认证中心',
        linkUrl: '/pages/my/authentication/authentication'
      },
      {
        id: '2',
        icon: '../images/invitation.png',
        title: '我的帖子',
        linkUrl: '/pages/my/myInvitation/myInvitation'
      },
      {
        id: '3',
        icon: '../images/myCollect.png',
        title: '我的收藏',
        linkUrl: '/pages/my/collect/collect'
      },
      {
        id: '4',
        icon: '../images/feedback.png',
        title: '意见反馈',
        linkUrl: '/pages/my/feedback/feedback'
      },
      {
        id: '5',
        icon: '../images/service.png',
        title: '联系客服',
        linkUrl: ''
      },
      {
        id: '6',
        icon: '../images/shequ.png',
        title: '用户须知',
        linkUrl: '/pages/my/convention/agreement/agreement'
      },
    ],
    twoDimension: '',
    visible: false,
    mine: [],
    collageName: '',
    showCom: true,
    loginshow: true,
    limits: true,
    getphone: false,
    collage: true,
    touxiang: '/pages/images/touxiang.jpg',
    log: '',
    niname: '',
    switchingtxt: [],
    associationId: [],
    chingtxt: '',
    picker: false,
    poindex: '0',
    isread: false,
  },
  methods: {
    // 登录
    getUserInfo(e) {
      let that=this
      let session = wx.getStorageSync('sessionKey');
      if (e.detail.errMsg == "getUserInfo:ok") {
        let openid = wx.getStorageSync('openid')
        wx.request({
            url: requestUrl.requestUrl + '/jj/weChat/jm',
            method: 'POST',
            data: {
              encryptedData: e.detail.encryptedData,
              errMsg: session,
              iv: e.detail.iv
            },
            header: {
              'content-type': 'application/x-www-form-urlencoded',
              'Accept': 'application/json'
            },success(res){

              wx.setStorageSync('uid', res.data.unionId)
              wx.request({
                url: requestUrl.requestUrl + '/jXUserApp/authorization',
                method: 'post',
                data: {
                  openId: openid,
                  nickName: e.detail.userInfo.nickName,
                  logo: e.detail.userInfo.avatarUrl,
                  country: e.detail.userInfo.country,
                  province: e.detail.userInfo.province,
                  city: e.detail.userInfo.city
                },
                header: {
                  'content-type': 'application/x-www-form-urlencoded',
                  'Accept': 'application/json'
                },
                success(res) {
                  wx.setStorageSync('nickName', res.data.data.nickName),
                    wx.setStorageSync('logo', res.data.data.logo)
                  wx.setStorageSync('userid', res.data.data.id)
                  wx.setStorageSync('quanxian', res.data.openId);
                  wx.setStorageSync('phone', '');
                  that.getMy(); //异步同步
                  // that.accredit()
                  that.switching()
                  that.setData({
                    loginshow: true,
                    limits: true,
                    log: res.data.data.logo,
                    niname: res.data.data.nickName,
                  })
                }
              })
            }
     
      })

      }

    },
    //用户授权
    accredit() {
      let that = this;
      let nickName = wx.getStorageSync('nickName');
      let logo = wx.getStorageSync('logo');
      wx.hideTabBar({})
      wx.getSetting({
        success: res => {
          if (res.authSetting['scope.userInfo']) {
            // 已经授权，可以直接调用 getUserInfo 获取头像昵称，不会弹框
            that.setData({
              loginshow: true,
              limits: true,
              log: logo,
              niname: nickName,
            })
            that.getphone()
          } else {
            that.setData({
              limits: false,
              loginshow: false,
            })
          }
        }
      })
    },
    //手机号授权
    phonenumber(e) {
      let that = this;
      let session = wx.getStorageSync('sessionKey');
      let userid = wx.getStorageSync('userid');
      wx.hideTabBar({})
      wx.request({
        url: requestUrl.requestUrl + '/jj/weChat/jm',
        method: 'POST',
        data: {
          encryptedData: e.detail.encryptedData,
          errMsg: session,
          iv: e.detail.iv
        },
        header: {
          'content-type': 'application/x-www-form-urlencoded',
          'Accept': 'application/json'
        },
        success(res) {
          if (res.data.phoneNumber == undefined) {
            that.setData({
              button: true
            })
          } else {
            that.setData({
              button: false
            })
          }
          wx.setStorageSync('phone', res.data.phoneNumber)
          wx.request({
            url: requestUrl.requestUrl + '/jXUserApp/update',
            method: 'POST',
            data: {
              id: userid,
              phone: res.data.phoneNumber
            },
            header: {
              'content-type': 'application/x-www-form-urlencoded',
              'Accept': 'application/json'
            },
            success() {
              that.getMy(); //异步同步
              that.accredit()
            }
          })
        },
      })
    },
    //获取我的信息
    getMy() {
      let that = this;
      let userid = wx.getStorageSync('userid')
      let poindex = wx.getStorageSync('poindex')
      // let loginshow = wx.getStorageSync('loginshow')
      // let limits = wx.getStorageSync('limits')

      wx.request({
        url: requestUrl.requestUrl + '/jXUserApp/findByMy',
        method: 'get',
        data: {
          id: userid
        },
        header: {
          'content-type': 'application/json',
          'content-type': 'application/x-www-form-urlencoded'
        },
        success(res) {
           
          if (res.data.code == '200') {
            that.setData({
              mine: res.data.data,
            });
            if (res.data.data.collageName == null) {
              that.setData({
                collageName: "尚未认证"
              })
            } else {
              that.setData({
                collageName: res.data.data.collageName
              })

            }

            if (res.data.data.associationId == '') {
              wx.setStorageSync('renzheng', false)
            } else {
              wx.setStorageSync('renzheng', true)


            }
          }
        }
      })
    },
    //获取信息
    switching() {
      let that = this;
      let userid = wx.getStorageSync('userid');
      let poindex = wx.getStorageSync('poindex')
      wx.request({
        url: requestUrl.requestUrl + '/jXAssociationApp/findByUserId',
        method: 'get',
        data: {
          userId: userid
        },
        header: {
          'content-type': 'application/json',
          'content-type': 'application/x-www-form-urlencoded'
        },
        success(res) {
          for (let i = 0; i < res.data.rows.length; i++) {
            let swit = 'switchingtxt[' + i + ']'
            let associationId = 'associationId[' + i + ']'
            if (res.data.rows[i].associationType == '0') {
              if (res.data.rows[i].collageName == null) {
                that.setData({
                  [swit]: "尚未认证"
                })
              } else {
                that.setData({
                  [swit]: res.data.rows[i].collageName + '-' + res.data.rows[i].campus,
                  [associationId]: res.data.rows[i].id
                })
              }

            } else if (res.data.rows[i].associationType == '2') {
              if (res.data.rows[i].collageName == null) {
                that.setData({
                  [swit]: "尚未认证"
                })
              } else {
                that.setData({
                  [swit]: res.data.rows[i].collageName,
                  [associationId]: res.data.rows[i].id
                })
              }

            } else {
              that.setData({
                [swit]: res.data.rows[i].associationName,
                [associationId]: res.data.rows[i].id
              })
            }
            if (poindex == '') {
              poindex: '0'
            }
            else {
              poindex: poindex
            }
            that.setData({
              chingtxt: that.data.switchingtxt[poindex]
            })
          };
          that.setData({
            picker: true,
          })

        }
      })
    },
    //选择xiugai
    bindPickerChange: function(e) {
      let that = this
      this.setData({
        poindex: e.detail.value,
        picker: false
      })
      wx.setStorageSync('poindex', e.detail.value)
      let poindex = wx.getStorageSync('poindex')
      let userid = wx.getStorageSync('userid');
      this.setData({
        chingtxt: this.data.switchingtxt[poindex]
      })
      wx.request({
        url: requestUrl.requestUrl + '/jXUserApp/update',
        method: 'post',
        data: {
          id: userid,
          associationId: that.data.associationId[poindex]
        },
        header: {
          'content-type': 'application/json',
          'content-type': 'application/x-www-form-urlencoded'
        },
        success() {
          that.getMy()
        }
      })
    },
    //前往页面点击事件
    leaveFor(e) {
      let quanxian = wx.getStorageSync('quanxian');
      let that = this
      if (that.data.limits == false) {
        wx.showToast({
          title: '尚未登录，请立即登录！',
          icon: 'none',
          duration: 2000
        })
      } else {
        if (that.data.navigations.id == 2) {
          if (quanxian) {
            wx.navigateTo({
              url: e.currentTarget.dataset.url
            })
          } else {
            wx.showToast({
              title: '请先去 "我的-认证中心" 进行认证',
              icon: 'none',
              duration: 2000
            })
          }
        } else {
          wx.navigateTo({
            url: e.currentTarget.dataset.url,
          })
        }

      }
    },
    //签到点击事件
    signIn() {
      let that = this
      if (that.data.limits == false) {
        wx.showToast({
          title: '尚未登录，请立即登录！',
          icon: 'none',
          duration: 2000
        })
      } else {
        wx.navigateTo({
          url: '/pages/my/signIn/signIn',
        })
      }
    },
    //兑换点击事件
    exchange() {
      let that = this
      if (that.data.limits == false) {
        wx.showToast({
          title: '尚未登录，请立即登录！',
          icon: 'none',
          duration: 2000
        })
      } else {
        // wx.navigateTo({
        //   url: '/pages/my/conversion/conversion',
        // })
        wx.showToast({
          title: '尚未开通，敬请期待！',
          icon: 'none',
          duration: 2000
        })
      }
    },
    //私信点击事件
    private() {
      let that = this
      if (that.data.limits == false) {
        wx.showToast({
          title: '尚未登录，请立即登录！',
          icon: 'none',
          duration: 2000
        })
      } else {
        wx.navigateTo({
          url: '/pages/my/private/private',
        })
      }
    },
    //足迹点击事件
    footprint() {
      let that = this
      if (that.data.limits == false) {
        wx.showToast({
          title: '尚未登录，请立即登录！',
          icon: 'none',
          duration: 2000
        })
      } else {
        wx.navigateTo({
          url: '/pages/my/footprint/footprint',
        })
      }
    },
    //粉丝点击事件
    fans() {
      let that = this
      if (that.data.limits == false) {
        wx.showToast({
          title: '尚未登录，请立即登录！',
          icon: 'none',
          duration: 2000
        })
      } else {
        wx.navigateTo({
          url: '/pages/my/fans/fans',
        })
      }
    },
    //关注点击
    focus() {
      let that = this
      if (that.data.limits == false) {
        wx.showToast({
          title: '尚未登录，请立即登录！',
          icon: 'none',
          duration: 2000
        })
      } else {
        wx.navigateTo({
          url: '/pages/my/focus/focus',
        })
      }
    },
    //修改资料点击事件 
    compile(e) {
      wx.navigateTo({
        url: '/pages/my/amend/amend?img=' + e.currentTarget.dataset.img,
      })
    },

    //分享图片事件处理
    shower: function() {
      let that = this
      let phone = wx.getStorageSync('phone')
      if (that.data.limits == false) {
        wx.showToast({
          title: '尚未登录，请立即登录！',
          icon: 'none',
          duration: 2000
        })
      } else {
        this.setData({
          visible: true
        })
        this.selectComponent("#share").getMy();
      }
    },
    close: function() {
      this.setData({
        visible: false
      })
    },
    //getphone
    getphone() {
      let that = this
      let phone = wx.getStorageSync('phone')
      if (that.data.loginshow == true) {
        if (phone == 'undefined' || phone == "" || phone == null) {
          that.setData({
            getphone: true,
            collage: false
          })
        } else {
          that.setData({
            getphone: false,
            collage: true
          })
        }
      }
    }
  },
  attached() {
    this.switching()
    this.accredit()
    this.getMy()

  }
})