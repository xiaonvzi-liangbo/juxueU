/* pages/index/index.wxss */
page{
  background-color: #fff;
  overflow: hidden;
}

.martop{
  background-color: #fff;
  padding-top: 40rpx;
}
.slideshow{
  text-align: center;
}
.image{
  border-radius: 15rpx;
  height: 100%;
  width: 95%;
}
.nav_slideshow{
  background-color: #fff;
  margin: 0 auto;
  margin-top: 40rpx;
  width: 95%;
}
.navigation{
  display: flex;
  flex-direction: row;
  align-items: center;
  text-align: center;
  padding-bottom: 30rpx;
  font-size: 25rpx;
}
.details{
  width: 200rpx;
  flex:1 1 auto;
  font-size: 33rpx;
}
.marbotton{
  margin-top: 15rpx;
  background-color: #fff;
  padding: 20rpx;
}
.view_top{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.view_img{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.view_title{
  margin-left: 10rpx;
  font-weight: 600;
}
.more{
  position: relative;
  top: 12rpx;
  font-size: 28rpx;
  color: #111111;
}
.hot_cont{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 30rpx;
  margin-bottom: 20rpx;
}
.hot_portrait{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-left: 10rpx;
}
.hot_title{
  font-weight: 550;
  color: #5D5D5D;
  position: relative;
  top: -5rpx;
}
.hot_images{
  height: 200rpx;
  width: 100%;
  border-radius: 10rpx;
}
.hot_icon{
  border-radius: 15rpx;
  margin-left: 10rpx;
  width: 20rpx;
  height: 20rpx;
}
.hot_fontsize{
  margin-left: 5rpx;
  margin-right: 14rpx;
  color: #A8A8A8;
}
.hot_down{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.hot_down_row{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.mass{
  width: 30rpx;
  height: 30rpx;
  position: relative;
  top: 5rpx;
  right: 20rpx;
}
.sq{
  position: fixed;
  background-color: #fff;
  height: 100%;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0rpx;
  z-index: 99999;
}
.tubiao{
  width: 322rpx;
  height: 322rpx;
}
.site{
  text-align: center;
  padding-top: 300rpx;
}
.title{
  font-size: 30rpx;
  text-align: center;
}
.login{
  width: 380rpx;
  background-color: #2996CC;
  border-radius: 50rpx;
  margin-top: 150rpx;
  color: #fff;
}