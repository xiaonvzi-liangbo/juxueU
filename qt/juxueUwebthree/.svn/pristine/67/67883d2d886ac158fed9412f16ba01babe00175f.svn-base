// pages/my/myInvitation/myInvitation.js
import requestUrl from '../../../utils/request.js'
const time = require('../../../utils/time.js')
const quantity = require('../../../utils/quantity.js')
Page({

  /*** 页面的初始数据 */
  data: {
    current: '0',
    pagenum: 1,
    showPost: false,
    userdata:[],
    mytime:'',
    associationName:'',
    showCom: true
  },
  /*** 生命周期函数--监听页面加载 */
  onLoad: function (options) {
    this.userdata();
    this.mytime()
  },

//自动刷新
  onShow() {
    this.setData({
      showCom: false
    });
    this.setData({
      showCom: true
    });
  },
  //滑动切换事件
  swiperChange(e) {
    console.log(e)
    this.setData({
      current: e.detail.current
    })
  },
  //点击切换事件
  switchs(e) {
    console.log(e)
    this.setData({
      current: e.currentTarget.dataset.current
    })
  },
  //点击发布帖子事件
  post() {
    this.setData({
      showPost: true
    })
  },
  //点击关闭帖子发布事件
  close() {
    this.setData({
      showPost: false
    })
    // this.selectComponent("#refurbish1").attached();
    // this.selectComponent("#refurbish2").getData();
    // this.selectComponent("#refurbish3").getData();
    let pages = getCurrentPages();
    pages[pages.length - 1].getData(); //异步同步
  },
  sendBy() {
    let quanxian = wx.getStorageSync('quanxian');
    if (quanxian) {
      wx.navigateTo({
        url: '/pages/universityCircle/issue/issue?id=0'
      })
    } else {
      wx.showToast({
        title: '请先去 "我的-认证中心" 进行认证',
        icon: 'none',
        duration: 2000
      })
    }
  },
  //发心情点击事件
  sendMood() {
    let quanxian = wx.getStorageSync('quanxian');
    if (quanxian) {
      wx.navigateTo({
        url: '/pages/universityCircle/issue/issue?id=1'
      })
    } else {
      wx.showToast({
        title: '请先去 "我的-认证中心" 进行认证',
        icon: 'none',
        duration: 2000
      })
    }
  },
  //发问答点击事件
  sendQuestions() {
    let quanxian = wx.getStorageSync('quanxian');
    if (quanxian) {
      wx.navigateTo({
        url: '/pages/universityCircle/issue/issue?id=2',
      })
    } else {
      wx.showToast({
        title: '请先去 "我的-认证中心" 进行认证',
        icon: 'none',
        duration: 2000
      })
    }
  },

  //获取我的用户-我的贴子
  userdata: function () {
    var that = this;
    let userid = wx.getStorageSync('userid')
    wx: wx.request({
      url: requestUrl.requestUrl + '/jXUserApp/findByMyPosts',
      data: {
        id: userid,
      },
      header: {
        'content-type': 'application/json',
      },
      method: 'GET',
      success: function (res) {
        let information = res.data.data
        that.setData({
          userdata:information
        });
        if (res.data.data.associationName == null) {
          that.setData({
            associationName: "尚未认证"
          })
        } else {
          that.setData({
            associationName: res.data.data.collageName
          })
        }
      },
    })
  },
  // 删除我的贴子
  deldata: function (e) {
    console.log(e)
    let that = this;
    wx.request({
      url: requestUrl.requestUrl + '/jXCollagePostsApp/deleteUpdatae',
      data: {
        id: e.currentTarget.id
      },
      method: 'post',
      header: {
        'content-type': 'application/json',
        'content-type': 'application/x-www-form-urlencoded'
      },
      success(res) {
        if (res.data.code == '200') {
          wx.showToast({
            title: '删除成功！',
            icon: 'none',
            duration: 2000
          });
          that.userdata()
        }
      },
    })
  },
  getData() { },
  //获取注册时间
  mytime() {
    let that = this
    let userid = wx.getStorageSync('userid')
    wx.request({
      url: requestUrl.requestUrl + '/jXUserApp/findByMyTime',
      data: {
        userId: userid
      },
      method: 'GET',
      header: {
        'content-type': 'application/json',
        'content-type': 'application/x-www-form-urlencoded'
      },

      success: function (res) {
        console.log(res)
        that.setData({
          mytime: res.data.data
        })
      },
    })
  },
  
  
})