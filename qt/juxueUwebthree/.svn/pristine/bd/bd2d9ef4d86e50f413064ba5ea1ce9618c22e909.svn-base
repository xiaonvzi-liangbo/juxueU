/* pages/universityCircle/information/information.wxss */

.all {
  width: 95%;
  margin: auto;
  font-size: 30rpx;
  /* box-shadow: 0 0 10rpx #c3c6ca; */
  position: relative;
}

.title {
  font-size: 36rpx;
  font-weight: 550;
}

.top {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.img_tx {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin: 20rpx 0;
  border: 1rpx solid gainsboro;
}

.attention {
  width: 100rpx;
  height: 48rpx;
  background-image: linear-gradient(to bottom right, #7590f2, #2b6cef);
  border-radius: 40rpx;
  color: #fff;
  font-size: 24rpx;
  text-align: center;
  line-height: 48rpx;
  font-weight: bold;
}

.text {
  line-height: 50rpx;
  font-size: 28rpx;
  color: #595959;
  margin-left: 15rpx;
}

.topics1 {
  border-radius: 20rpx;
  height: 40rpx;
  padding: 0 10rpx;
  line-height: 40rpx;
  background: none;
  color: #2996cc;
  margin: 20rpx 0;
  font-size: 22rpx;
  border: 1rpx #2996cc solid;
}

.issue_time {
  font-size: 25rpx;
  color: #a2a2a2;
  margin-left: 10rpx;
}

.comment {
  margin-top: 30rpx;
  font-size: 33rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.comment_block {
  height: 37rpx;
  width: 10rpx;
  background-color: #2896cc;
}

.com_comment {
  margin-left: 40rpx;
  margin-right: 10rpx;
}

.com_img_name {
  margin-top: 20rpx;
  margin-left: 5rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.com_img {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  border: 1rpx solid gainsboro;
  margin-right: 15rpx;
}

.com_name {
  margin-left: 5rpx;
  font-size: 24rpx;
  color: #2f6eef;
}

.com_conter {
  font-size: 28rpx;
  margin-top: 10rpx;
  color: #000;
  margin-left: 70rpx;
  line-height: 40rpx;
  border-bottom: 1rpx solid #f6f6f6;
}

.com_text {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.com_row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.com_bet {
  margin-top: 15rpx;
  margin-bottom: 15rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 25rpx;
  color: #b3b3b3;
}

.text_line {
  margin: 0 20rpx 0 10rpx;
}

.bottom {
  height: 100rpx;
  position: fixed;
  bottom: 0;
  border-top: 1rpx solid #ddd;
  background-color: #fff;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  color: #bdbdbd;
  font-size: 30rpx;
}

.bot_input {
  width: 100%;
  background-color: #e5e5e5;
  margin-left: 20rpx;
  margin-right: 20rpx;
  padding: 12rpx 15rpx 12rpx 15rpx;
  border-radius: 50rpx;
  color: #000;
  /* border: 2rpx #000 solid; */
}

.bot_right {
  margin-left: 90rpx;
  display: flex;
  flex-direction: row;
  width: 100%;
}

.flex_auto {
  flex: auto;
}

.right_img {
  width: 48rpx;
  height: 48rpx;
}

.number {
  font-size: 14rpx;
  width: 26rpx;
  height: 18rpx;
  line-height: 18rpx;
  text-align: center;
  background-color: #f21c1d;
  color: #fff;
  position: absolute;
  top: 15rpx;
  margin-left: 30rpx;
  /* display: flex; */
  border-radius: 8rpx;
}

.reply {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100%;
}

.rep_posi {
  height: 100%;
  width: 95%;
  font-size: 33rpx;
  margin: auto;
}

.row {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}

.rep_reply {
  margin: auto;
  font-size: 36rpx;
  font-weight: 550;
  color: #595959;
}

.rep_conter {
  overflow: auto;
  margin-top: 20rpx;
}

.rep_botom {
  position: fixed;
  bottom: 0;
  height: 100rpx;
  font-size: 25rpx;
  border-top: 1rpx solid #d8d8d8;
  background-color: #fff;
  width: 100%;
}

.rep_input {
  background-color: #ebebeb;
  width: 89%;
  margin: auto;
  padding: 12rpx 20rpx;
  border-radius: 10rpx;
  position: relative;
  top: 20rpx;
}

.bot_text {
  position: relative;
  right: 6rpx;
}

.attention1 {
  font-size: 25rpx;
  color: #bfbfbf;
}

.userlogo {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.img_icon {
  width: 20rpx;
  height: 20rpx;
  position: relative;
  top: 20rpx;
  right: 20rpx;
}

.small {
  color: #808080;
  font-size: 22rpx;
  margin-top: 5rpx;
}

.sma_title {
  font-size: 26rpx;
  font-weight: 900;
}

.pos_title {
  width: 100%;
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.flex_auto1 {
  /* background-color: #FFFFFF; */
  padding: 0;
  margin: 0;
  width: 40rpx;
  border: 0;
  color: #bdbdbd;
  line-height: 35rpx;
  position: static;
  margin-right: 30rpx;
  background-color: red;
}

.button {
  position: absolute;
  height: 100%;
  opacity: 0.1;
  width: 60rpx;
  z-index: 99;
  top: 0;
}
