/* pages/tztopics/topics/topics.wxss */
@import '/colorui/icon.wxss';
@import '/colorui/main.wxss';

.topics {
  width: 100%;
  display: flex;
  padding: 0 20rpx 30rpx 50rpx;
  background-color: #fff;
}

.left_img {
  width: 90rpx;
  height: 90rpx;
  border-radius: 20rpx;
}

.name {
  font-size: 32rpx;
  font-weight: bold;
}

.num {
  width: 260rpx;
  display: flex;
  margin-top: 24rpx;
  font-size: 22rpx;
  color: #808080;
  justify-content: space-between;
}

.next {
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  position: absolute;
  right: 20rpx;
  margin-top: 10rpx;
}

.entrance {
  font-size: 30rpx;
  margin: 40rpx 0 0 50rpx;
}

.search {
  height: 24rpx;
  width: 18rpx;
  margin-right: 5rpx;
  font-size: 24rpx;
  color:red;
}
