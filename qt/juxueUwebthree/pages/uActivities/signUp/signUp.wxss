/* pages/components/uActivities/hotact/hotact.wxss */

.entire {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 20rpx;
}

.logo {
  width: 250rpx;
  height: 170rpx;
  border-radius: 10rpx;
}

.cont_title {
  width: 70%;
  font-size: 32rpx;
  font-weight: Medium;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.cont_con {
  width: 110rpx;
  height: 40rpx;
  font-weight: 550;
  float: left;
  margin: 0;
  padding: 0;
  line-height: 40rpx;
  font-size: 26rpx;
  color: #fff;
  background-image: linear-gradient(to left, #D0D000 , #E8E865);
}

.entireRight {
  width: 100%;
  height: 170rpx;
  display: flex;
  background-color: #fff;
  flex-direction: column;
  justify-content: space-around;
  margin: auto;padding-left: 20rpx;
}

.cont_time {
  font-size: 25rpx;
  color: #a1a1a1;
  position: relative;
  bottom: 0;
  display: flex;
  justify-content: space-between;
  margin-right: 20rpx;
}

.red_dot {
  width: 20rpx;
  height: 20rpx;
  background-color: red;
  border-radius: 50%;
  position: absolute;
  top: 24rpx;
  left: 120rpx;
}

.img_icon {
  width: 30rpx;
  height: 30rpx;
  position: relative;
  right: 30rpx;
}
